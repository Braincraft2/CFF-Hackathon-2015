<h1>Sign up page</h1>
<%= form_tag("create", method: "get") do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %><br>
  <%= label_tag(:email, "Email:") %>
  <%= text_field_tag(:email) %><br>
  <%= label_tag(:password, "Password:") %>
  <%= text_field_tag(:password) %><br>
  <%= label_tag(:cpassword, "Confirm password:") %>
  <%= text_field_tag(:cpassword) %><br>
  <%= submit_tag 'Sign-up', :class => "btn btn-lg btn-primary btn-block" %>
<% end %>
